<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:tei="http://www.tei-c.org/ns/1.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Type of document (name of subdirectory containing the source
       file). -->
  <xsl:variable name="document_type" select="'tei'" />
  <!-- ID of sitemap map:match to use for display of individual
       texts. -->
  <xsl:variable name="match_id" select="'local-tei-display-html'" />

  <kiln:parent>
    <xi:include href="works.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title">
      <kiln:super />
      <xsl:text>Texts</xsl:text>
    </kiln:block>

    <kiln:block name="page-heading">
      <kiln:super />
      <xsl:text>Texts</xsl:text>
    </kiln:block>
  </kiln:child>
</kiln:root>
